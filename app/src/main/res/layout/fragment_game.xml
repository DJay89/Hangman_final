<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="danny.hangman.fragments_game.Game">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/galge"
        android:maxHeight="150dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />


    <TextView
        android:id="@+id/tvWord01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView01"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/tvWrongLetters01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWord01"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/usersInput01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWrongLetters01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:ems="5"
        android:inputType="text"
        android:hint="Type a letter"
        android:textAlignment="center" />

    <Button
        android:id="@+id/submit01"
        android:textSize="9dp"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/usersInput01"
        android:text="Submit" />

    <TextView
        android:id="@+id/tvError01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="8dp" />

    <TextView
        android:id="@+id/tvShowWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvError01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold" />

</RelativeLayout>
